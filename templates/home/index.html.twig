{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'list'|trans }} {{ 'labels.homes'|trans }}</h1>

    <a href="{{ path('home_create') }}" class="btn btn-primary">{{ 'actions.create'|trans({'%entity%': 'labels.home'|trans}) }}</a>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'actions_title'|trans }}</th>
            <th>{{ 'id'|trans }}</th>
            <th>{{ 'home.address'|trans }}</th>
            <th>{{ 'home.city'|trans }}</th>
            <th>{{ 'home.zip_code'|trans }}</th>
            <th>{{ 'home.country'|trans }}</th>
            <th>{{ 'home.currently_occupied'|trans }}</th>
            <th>{{ 'labels.user'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>
                    <a href="{{ path('home_show', {'id': home.id}) }}" class="btn btn-primary">{{ 'actions.show'|trans({'%entity%': 'labels.home'|trans}) }}</a>
                    <a href="{{ path('home_edit', {'id': home.id}) }}" class="btn btn-primary">{{ 'actions.edit'|trans({'%entity%': 'labels.home'|trans}) }}</a>
                    <form action="{{ path('home_delete', {'id': home.id}) }}" method="POST"
                          onsubmit="return confirm('Are you sure you want to delete this home?');">
                        <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
                        <button type="submit" class="btn btn-danger">{{ 'actions.remove'|trans({'%entity%': 'labels.home'|trans}) }}</button>
                    </form>
                </td>
                <td>{{ home.id }}</td>
                <td>{{ home.address }}</td>
                <td>{{ home.city }}</td>
                <td>{{ home.zipCode }}</td>
                <td>{{ home.country }}</td>
                <td>{{ home.currentlyOccupied ? 'Yes' : 'No' }}</td>
                <td>{{ home.user.firstName }} {{ home.user.lastName }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'no_home_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="{{ path('home_list') }}">
        <label>
            <select name="limit" onchange="this.form.submit()">
                <option value="5" {% if limit == 5 %}selected{% endif %}>5</option>
                <option value="10" {% if limit == 10 %}selected{% endif %}>10</option>
                <option value="20" {% if limit == 20 %}selected{% endif %}>20</option>
            </select>
        </label>
    </form>

    {% if pages_count > 1 %}
        <div class="pagination">
            {% if current_page > 1 %}
                <a href="{{ path('home_list', {'page': current_page - 1, 'limit': limit}) }}">{{ 'pagination.previous'|trans }}</a>
            {% endif %}
            {% for page in 1..pages_count %}
                {% if page == current_page %}
                    <span>{{ page }}</span>
                {% else %}
                    <a href="{{ path('home_list', {'page': page, 'limit': limit}) }}">{{ page }}</a>
                {% endif %}
            {% endfor %}
            {% if current_page < pages_count %}
                <a href="{{ path('home_list', {'page': current_page + 1, 'limit': limit}) }}">{{ 'pagination.next'|trans }}</a>
            {% endif %}
        </div>
    {% endif %}

    {% for message in app.flashes('success') %}
        <div class="flash-notice">{{ message|trans }}</div>
    {% endfor %}
{% endblock %}
