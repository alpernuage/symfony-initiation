{% extends 'base.html.twig' %}
{% block title %}{{ 'actions.show'|trans({'%entity%': 'labels.home'|trans}) }}{% endblock %}
{% block body %}
    <h1>{{ 'actions.show'|trans({'%entity%': 'labels.home'|trans}) }}</h1>
    <strong>Updated At: </strong><code>{{ home.updatedAt|date('Y-m-d H:i:s') }}</code>

    {% if countryName is defined and countryName is not null %}
        <p><strong>{{ 'home.country'|trans }}:</strong> {{ home.country|country_name }}</p>
    {% endif %}

    <table>
        <tr>
            <th>{{ 'home.address'|trans }}</th>
            <td>{{ home.address }}</td>
        </tr>
        <tr>
            <th>{{ 'home.city'|trans }}</th>
            <td>{{ home.city }}</td>
        </tr>
        <tr>
            <th>{{ 'home.zip_code'|trans }}</th>
            <td>{{ home.zipCode }}</td>
        </tr>
        <tr>
            <th>{{ 'home.country'|trans }}</th>
            <td>{{ home.country }}</td>
        </tr>
        <tr>
            <th>{{ 'home.currently_occupied'|trans }}</th>
            <td>{{ home.currentlyOccupied ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>{{ 'labels.user'|trans }}</th>
            <td>{{ home.user.firstName }} {{ home.user.lastName }}</td>
        </tr>
    </table>

    <a href="{{ path('home_list') }}">{{ 'buttons.return'|trans({'%entity%': 'labels.homes'|trans}) }}</a>

    {% for message in app.flashes('success') %}
        <div class="flash-notice">{{ message|trans }}</div>
    {% endfor %}
{% endblock %}
