<table class="table">
    <thead>
    <tr>
        <th>{{ 'actions_title'|trans }}</th>
        <th>{{ 'id'|trans }}</th>
        <th>{{ 'home.address'|trans }}</th>
        <th>{{ 'home.city'|trans }}</th>
        <th>{{ 'home.zip_code'|trans }}</th>
        <th>{{ 'home.country'|trans }}</th>
        <th>{{ 'home.currently_occupied'|trans }}</th>
        <th>{{ 'labels.user'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for home in homes %}
        <tr>
            <td>

                {% if show_details_edit_remove_buttons %}
                    <a href="{{ path('home_show', {'id': home.id}) }}" class="btn btn-primary">{{ 'actions.show'|trans({'%entity%': 'labels.home'|trans}) }}</a>
                    <a href="{{ path('home_edit', {'id': home.id}) }}" class="btn btn-primary">{{ 'actions.edit'|trans({'%entity%': 'labels.home'|trans}) }}</a>
                    <form action="{{ path('home_delete', {'id': home.id}) }}" method="POST"
                          onsubmit="return confirm('Are you sure you want to delete this home?');">
                        <input type="hidden" name="token" value="{{ csrf_token('soft-delete-item') }}"/>
                        <button type="submit" class="btn btn-danger">{{ 'actions.remove'|trans({'%entity%': 'labels.home'|trans}) }}</button>
                    </form>

                {% else %}
                    <form action="{{ path('home_restore', {'id': home.id}) }}" method="POST"
                          onsubmit="return confirm('Are you sure you want to restore this home?');">
                        <input type="hidden" name="token" value="{{ csrf_token('restore-item') }}"/>
                        <button type="submit" class="btn btn-danger">{{ 'actions.restore'|trans({'%entity%': 'labels.home'|trans}) }}</button>
                    </form>
                    <form action="{{ path('home_hard_delete', {'id': home.id}) }}" method="POST"
                          onsubmit="return confirm('Are you sure you want to HARD delete this home?');">
                        <input type="hidden" name="token" value="{{ csrf_token('hard-delete-item') }}"/>
                        <button type="submit" class="btn btn-danger">{{ 'actions.hard_remove'|trans({'%entity%': 'labels.home'|trans}) }}</button>
                    </form>
                {% endif %}

            </td>
            <td>{{ home.id }}</td>
            <td>{{ home.address }}</td>
            <td>{{ home.city }}</td>
            <td>{{ home.zipCode }}</td>
            <td>{{ home.country }}</td>
            <td>{{ home.currentlyOccupied ? 'Yes' : 'No' }}</td>
            <td>{{ home.user.firstName }} {{ home.user.lastName }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">{{ 'no_home_found'|trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
