{% extends 'base.html.twig' %}
{% block body %}
    {% apply spaceless %}
        <a href="{{ path('home_list') }}" class="btn btn-primary">{{ 'buttons.go_to'|trans({'%entity%': 'labels.homes'|trans}) }}</a>

        <h1>{{ 'list'|trans }} {{ 'labels.users'|trans }}</h1>

        <a href="{{ path('user_create') }}" class="btn btn-primary">{{ 'actions.create'|trans({'%entity%': 'labels.user'|trans}) }}</a>

        <table class="table">
            <thead>
            <tr>
                <th>{{ 'actions_title'|trans }}</th>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'user.first_name'|trans }}</th>
                <th>{{ 'user.last_name'|trans }}</th>
                <th>{{ 'user.email'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary">{{ 'actions.show'|trans({'%entity%': 'labels.user'|trans}) }}</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">{{ 'actions.edit'|trans({'%entity%': 'labels.user'|trans}) }}</a>
                        <form action="{{ path('user_delete', {'id': user.id}) }}" method="POST"
                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
                            <button type="submit" class="btn btn-danger">{{ 'actions.remove'|trans({'%entity%': 'labels.user'|trans}) }}</button>
                        </form>
                    </td>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'no_user_found'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <form action="{{ path('user_list') }}">
            <select name="limit" onchange="this.form.submit()">
                <option value="5" {% if limit == 5 %}selected{% endif %}>5</option>
                <option value="10" {% if limit == 10 %}selected{% endif %}>10</option>
                <option value="20" {% if limit == 20 %}selected{% endif %}>20</option>
            </select>
        </form>

        {% if pages_count > 1 %}
            <div class="pagination">
                {% if current_page > 1 %}
                    <a href="{{ path('user_list', {'page': current_page - 1, 'limit': limit}) }}">{{ 'pagination.previous'|trans }}</a>
                {% endif %}
                {% for page in 1..pages_count %}
                    {% if page == current_page %}
                        <span>{{ page }}</span>
                    {% else %}
                        <a href="{{ path('user_list', {'page': page, 'limit': limit}) }}">{{ page }}</a>
                    {% endif %}
                {% endfor %}
                {% if current_page < pages_count %}
                    <a href="{{ path('user_list', {'page': current_page + 1, 'limit': limit}) }}">{{ 'pagination.next'|trans }}</a>
                {% endif %}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="flash-notice">{{ message|trans }}</div>
        {% endfor %}
    {% endapply %}
{% endblock %}
